<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageBusiness"
    android:background="@color/PeachPuff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_businesses"
            style="@style/ManageBusinessTitleTextView"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/manage_business_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/manage_business_add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_business_24"
        android:backgroundTint="@color/FernGreen"
        android:layout_gravity="end|bottom"
        android:padding="20dp"
        android:layout_margin="20dp"/>

</FrameLayout>